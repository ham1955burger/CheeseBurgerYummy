<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/coverImageView"
        android:contentDescription="androidImage"
        android:background="@mipmap/ic_launcher"
        android:layout_width="220dp"
        android:layout_height="220dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="Photo"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/photoButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/householdButton"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp" />

    <Button
        android:text="Household account book"
        android:layout_width="0dp"
        android:id="@+id/householdButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="50dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="117dp"
        app:layout_constraintBottom_toTopOf="@+id/photoButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coverImageView">

        <TextView
            android:text="안녕하세요, 햄니님!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/welcomTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.39" />

        <TextView
            android:text="이 버튼을 눌러 친구를 초대하세요!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inviteTextView"
            android:layout_marginTop="8dp"
            android:textColor="@color/com_facebook_blue"
            app:layout_constraintTop_toBottomOf="@+id/welcomTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
