<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/facebookLoginButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_height="200dp"
            android:layout_width="200dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@mipmap/cheess_burger" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:text="Facebook Login"
        android:layout_width="match_parent"
        android:id="@+id/facebookLoginButton"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/userLoginButton"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/userLoginButton"
        app:layout_constraintRight_toRightOf="@+id/userLoginButton" />

    <Button
        android:text="User Login"
        android:id="@+id/userLoginButton"
        android:layout_width="0dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp" />

</android.support.constraint.ConstraintLayout>
